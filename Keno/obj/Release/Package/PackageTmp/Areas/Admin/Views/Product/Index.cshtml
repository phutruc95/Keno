@model PagedList.IPagedList<Keno.Model.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />

<h3>Danh sách sản phẩm</h3>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Loại sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Liên kết
        </th>
        <th>
            Giá
        </th>
        <th>
            Giá khuyến mãi
        </th>
        <th>
            Đang khuyến mãi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            <img style="height: 50px; width: auto;" src="@(!string.IsNullOrEmpty(item.Image) ? Url.Content(item.Image) : string.Empty)" alt="@item.ProductName" />
        </td>
        <td>
            @Html.ActionLink(Keno.Utility.CommonFunction.ShortenString(item.Url ?? "#", 20), item.Url, null, new { title = item.Url })
        </td>
        <td>
            @(string.Format("{0:n0}", item.Price))₫
        </td>
        <td>
            @(string.Format("{0:n0}", item.SalePrice))₫
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsOnSale)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ID }) |
            @*@Html.ActionLink("Chi tiết", "Details", new { id=item.ID }) |*@
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
