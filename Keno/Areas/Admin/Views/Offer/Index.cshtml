@model IEnumerable<Keno.Model.Offer>

@{
    ViewBag.Title = "Mã giảm giá";
}

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Percent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OverduedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoinsConsumed)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Percent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OverduedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
            <img style="height: 50px; width: auto;" src="@(!string.IsNullOrEmpty(item.Image) ? Url.Content(item.Image) : string.Empty)" alt="@item.Desc" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoinsConsumed)
        </td>
        <td>
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}
    
</table>

