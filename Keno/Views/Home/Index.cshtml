@model IEnumerable<Keno.Model.Advertisement>

@{
    ViewBag.Title = "Trang chủ";
    List<Keno.Model.ProductType> lstProductType = ViewBag.ListProductType;
}

<link rel="stylesheet" href="@Url.Content("~/Content/Home.css")">
<div class="container">
    <div class="row">
        @Html.Partial("_SideMenuPartial", lstProductType)
        <div class="col-md-9">
            <div class="col-md-6 gallery">
                <a href="#"><div class="advertise-brick" style="height: 300px; background-image: url(@Url.Content("~/Content/Images/introduction.gif"))"></div></a>
            </div>
            @foreach (var ad in Model)
            {
                <div class="col-md-3 gallery">
                    <a href="@(!string.IsNullOrEmpty(ad.Url) ? ad.Url : Url.Action("Details", "Product", new { id = ad.ProductID }))">
                        <div class="advertise-brick" style="height: 150px; background-image: url('@Url.Content(ad.Image)'), url('@Url.Content("~/Content/Images/no-image-available.jpg")')"></div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('li.product-type').on('click', function () {
                $('li.product-type').removeClass('active');
                $(this).addClass('active');

                var typeID = $(this).data('id');
                window.location.href = "@Url.Action("Index", "Product")" + "?typeid=" + typeID;
            });
        });
    </script>
}
